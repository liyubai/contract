*{
   margin:0;  padding:0;
}
html
{
	width:100%;
	overflow-x:hidden;
}
.content
{
    width:100%;
    height:632px;
    position:relative;
    background:url(../../themes/cupertino/images/background2.jpg) no-repeat;
   
 }
.main-box
{
    width:450px;
    height:320px;
    margin-left:800px;
    margin-top:150px;
    position:absolute ;
    color:#ddd;
}
.title
{
    font-family:Adobe 黑体 Std R;
    color:#2281bb;
    font-size:24px;
    padding-left:50px;
    }
.login-box
{
    width:380px;
    height:160px;
    padding-top:20px;
    margin:0 auto;
}    
.userpart 
{
    width:360px;
    height:50px;
    margin:0 auto;
    margin-top:20px;
 }  
.userpart ,.passwordpart
{
    width:360px;
    height:50px;
    margin:0 auto;
    margin-top:20px;
 }
.buttonpart
 {
    width:360px;
    height:50px;
    margin:0 auto;
    margin-top:30px;
 }
 .userimg
 {
    width:20px;
    height:20px;
    background:url(../../themes/cupertino/images/ui-bg_new_login.png) ;
    background-position :-750px -10px;
    float:left;
    margin-top:10px;
    }
.passwordimg
 {
    width:20px;
    height:20px;
    background:url(../../themes/cupertino/images/ui-bg_new_login.png) ;
    background-position :-775px -10px;
    float:left;
    margin-top:10px;
    }   
   
 .usertext, .passwordtext
 {
     width:200px;
     height:40px;
     border:solid 2px #d2d3d7;
     border-radius:5px;
     line-height:40px;
     color:#d2d3d7;
     font-size:20px;
     padding-left:20px;
     margin-left :10px;
}  
.loginBtn
{
    background:url(../../themes/cupertino/images/login.png) no-repeat; width:123px; height:42px;border:none;
} 
.registerBtn
{
    background:url(../../themes/cupertino/images/register.png) no-repeat; width:118px; height:42px;border:none;margin-left:20px;
} 
.errnotice
{
    color:#dc0d1d;
    font-size:12px;
    line-height :40px;
    margin-left:10px;
    display :none;
}     
     
     
    